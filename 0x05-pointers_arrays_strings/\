#include "main.h"
/**
 * puts2 - print every other character of a string
 *@str- the  input
 *Return: print
 */

void rev_string(char *s)
{
	int a = 0;
	int b = 0;
	char *x = str;
	int o;
	while (*x != '\0')
		{
			x++;
			a++;
		}
	b = a - 1;

	for (o= 0; o <= b; o++)
	{
		if (o % 2 == 0)
		{
		_putchar(str[o]);
		}
	}
	}
	_putchar('\n');
}


